---
const { selectedItem } = Astro.props;
---

<nav>
    <div class="scene">
        <a href="/">
            <div class="cylinder">
                <div class="panel first"><span>Kade</span></div>
                <div class="panel second"><span>Williams</span></div>
                <div class="panel third"><span>Kade</span></div>
                <div class="panel fourth"><span>Williams</span></div>
            <!-- Add more panels as needed -->
            </div>
        </a>
    </div>
    <a class={`nav-link-container w-inline-block ${selectedItem === 'about' ? 'w--current' : ''}`} href="/about">[ABOUT ME]</a>
    <a class={`nav-link-container w-inline-block ${selectedItem === 'personal-projects' ? 'w--current' : ''}`} href="/personal-projects">[PORTFOLIO]</a>
    <a class={`nav-link-container w-inline-block ${selectedItem === 'contact' ? 'w--current' : ''}`} href="/portfolio">[CONTACT ME]</a>
</nav>
<slot />

<style>
    @import url('https://fonts.googleapis.com/css2?family=Anton&family=BBH+Sans+Bartle&family=BBH+Sans+Hegarty&family=Bebas+Neue&family=Instrument+Serif:ital@0;1&family=Oi&family=Righteous&family=Ultra&family=Unbounded:wght@200..900&family=Zalando+Sans+Expanded:ital,wght@0,200..900;1,200..900&display=swap');
    :root {
        --c1: cubic-bezier(.23, 1, .32, 1);
    }
    nav {
        display: flex;
        justify-content:space-between;
        padding: 0 50px;
        align-items: center;
    }
    .scene {
        width: 500px;

        /* Determines the cylinder height */
        height: 75px; 

        /* Creates the illusion of depth */
        perspective: 500px;
        overflow: hidden;
    }

    /* The rotating cylinder container */
    .cylinder {
        width: 100%;
        height: 100%;
        position: relative;

        /* Crucial for child elements to exist in 3D */
        transform-style: preserve-3d; 

        /* Continuous linear rotation */
        animation: rotateX-ticker 15s infinite linear; 
    }

    /* Styling for each panel */
    .panel {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        line-height: 100px;
        text-align: center;
        font-size: 24px;
        color: #010101;
        backface-visibility: hidden;
    }

    .first, .second,
    .third, .fourth {
        font-family: "BBH Sans Bartle", sans-serif;
        font-weight: 400;
        font-style: normal;
    }

    /* Positioning and rotating each panel */
    .panel:nth-child(1) { transform: rotateY(0deg) translateZ(150px); }
    .panel:nth-child(2) { transform: rotateY(90deg) translateZ(150px); }
    .panel:nth-child(3) { transform: rotateY(180deg) translateZ(150px); }
    .panel:nth-child(4) { transform: rotateY(270deg) translateZ(150px); }

    /* Animation keyframes for continuous rotation */
    @keyframes rotateX-ticker {
    from { transform: rotateY(0deg); }
    to { transform: rotateY(360deg); }
    }

    .cylinder:hover {
        animation-play-state: paused;
    }
    a {
        font-family: "Zalando Sans Expanded", sans-serif;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
        text-decoration: none;
        color: #010101;
    }
    a:hover {
        color: #01010138;
    }
    .panel {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .nav-link-container.w--current {
        color: #01010138;
        text-decoration: underline;
    }
</style>