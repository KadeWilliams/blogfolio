---
interface Props {
  title: string;
  problem?: string;
  solution?: string;
  header?: string;
  desc?: string[];
  tech?: string[];
  link?: string;
  github?: string;
  featured?: boolean;
  featuredDesc?: string;
  liveUrl?: string;
}

const {
  title,
  problem,
  solution,
  header,
  desc = [],
  tech = [],
  link,
  github,
  featured = false,
  featuredDesc,
  liveUrl,
} = Astro.props;
---

<article class={`project ${featured ? 'project--featured' : ''}`}>

  {featured && <div class="project-featured-badge">★ FEATURED PROJECT</div>}

  <div class="project-top">
    <h3 class="project-title">{title}</h3>
    <div class="project-links">
      {liveUrl && (
        <a href={liveUrl} target="_blank" rel="noopener" class="project-link project-link--live">
          LIVE ↗
        </a>
      )}
      {github && (
        <a href={github} target="_blank" rel="noopener" class="project-link">
          GITHUB ↗
        </a>
      )}
    </div>
  </div>

  {featuredDesc && (
    <p class="project-featured-desc">{featuredDesc}</p>
  )}

  {(problem || solution) && (
    <div class="project-ps">
      {problem && (
        <div class="project-ps-item">
          <span class="ps-label">PROBLEM//</span>
          <p>{problem}</p>
        </div>
      )}
      {solution && (
        <div class="project-ps-item">
          <span class="ps-label ps-label--solution">SOLUTION//</span>
          <p>{solution}</p>
        </div>
      )}
    </div>
  )}

  {header && (
    <div class="project-kd-header">{header}</div>
  )}

  {desc.length > 0 && (
    <ul class="project-list">
      {desc.map(item => (
        <li>
          <span class="list-bullet">▸</span>
          {item}
        </li>
      ))}
    </ul>
  )}

  {tech.length > 0 && (
    <div class="project-tech">
      {tech.map(t => <span class="chip">{t}</span>)}
    </div>
  )}

</article>

<style>
  .project {
    border: 1px solid var(--border-color);
    background: var(--bg-2);
    padding: 2rem;
    transition: border-color 0.2s;
    position: relative;
  }

  .project::before {
    content: '';
    position: absolute;
    top: 0; left: 0;
    width: 3px;
    height: 100%;
    background: transparent;
    transition: background 0.2s;
  }

  .project:hover { border-color: rgba(0, 207, 255, 0.3); }
  .project:hover::before { background: var(--blue); }

  .project--featured {
    border-color: rgba(0, 207, 255, 0.4);
    background: linear-gradient(135deg, var(--bg-2) 0%, rgba(0, 207, 255, 0.04) 100%);
  }

  .project--featured::before { background: var(--blue); }

  .project-featured-badge {
    font-family: var(--font-vt);
    font-size: 0.9rem;
    letter-spacing: 0.15em;
    color: var(--bg);
    background: var(--blue);
    display: inline-block;
    padding: 2px 10px;
    margin-bottom: 1.25rem;
  }

  .project-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.25rem;
  }

  .project-title {
    font-family: var(--font-display);
    font-size: 1.6rem;
    line-height: 1;
    color: var(--white);
  }

  .project-links {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .project-link {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    font-weight: 700;
    letter-spacing: 0.12em;
    color: var(--dim);
    border: 1px solid var(--border-color);
    padding: 0.3rem 0.6rem;
    transition: all 0.15s;
  }

  .project-link:hover {
    color: var(--blue);
    border-color: var(--blue);
  }

  .project-link--live {
    color: var(--blue);
    border-color: var(--blue);
    box-shadow: var(--shadow-sm);
  }

  .project-link--live:hover {
    background: var(--blue);
    color: var(--bg);
    transform: translate(-1px, -1px);
    box-shadow: 3px 3px 0 rgba(0,207,255,0.3);
  }

  .project-featured-desc {
    color: var(--dim);
    margin-bottom: 1.5rem;
    line-height: 1.7;
    border-left: 2px solid var(--blue);
    padding-left: 1rem;
  }

  .project-ps {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1.25rem;
    padding: 1.25rem;
    background: var(--bg-3);
    border: 1px solid var(--border-color);
  }

  .project-ps-item {
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .ps-label {
    font-family: var(--font-vt);
    font-size: 0.9rem;
    letter-spacing: 0.15em;
    color: var(--red);
  }

  .ps-label--solution { color: var(--green); }

  .project-ps-item p {
    color: var(--dim);
    font-size: 0.85rem;
  }

  .project-kd-header {
    font-family: var(--font-display);
    font-size: 1rem;
    letter-spacing: 0.05em;
    color: var(--blue);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
  }

  .project-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .project-list li {
    display: flex;
    gap: 0.6rem;
    font-size: 0.85rem;
    color: var(--dim);
    line-height: 1.6;
  }

  .list-bullet {
    color: var(--blue);
    flex-shrink: 0;
    margin-top: 1px;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    padding-top: 1.25rem;
    border-top: 1px solid var(--border-color);
    margin-top: auto;
  }

  .chip {
    font-family: var(--font-vt);
    font-size: 1rem;
    padding: 2px 10px;
    border: 1px solid var(--border-color);
    color: var(--dim);
    transition: all 0.15s;
  }

  .chip:hover {
    border-color: var(--blue);
    color: var(--blue);
  }
</style>
