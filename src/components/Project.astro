---
const { title, desc, tech, problem, solution, header } = Astro.props;
---

<div class="single-item">
  <h3>{title}</h3>
  <div class="project-desc project-desc-list w-richtext">
    <p><em><strong>Problem:</strong></em> {problem}</p>
    <p><em><strong>Solution:</strong></em> {solution}</p>
    <h5>{header}</h5>
    <ul role="list">
      {desc.map(item => <li>{item}</li>)}
    </ul>
  </div>
</div>
