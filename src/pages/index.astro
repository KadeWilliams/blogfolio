---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
---

<Layout title="Kade Williams — Software Engineer">
  <Nav current="home" />

  <main class="page-wrapper">

    <section class="hero">
      <div class="hero-eyebrow">
        <span class="status-dot"></span>
        <span class="font-vt">AVAILABLE FOR OPPORTUNITIES</span>
      </div>

      <h1 class="hero-title">
        KADE<br />
        <span class="hero-title--outline">WILLIAMS</span>
      </h1>

      <div class="hero-sub">
        <div class="hero-role font-vt">// SENIOR SOFTWARE ENGINEER</div>
        <p class="hero-desc">
          Full-stack .NET developer specializing in internal business applications
          that automate critical processes and surface actionable insights across
          large-scale data environments. Deep expertise in the .NET ecosystem —
          C#, SQL Server, and beyond.
        </p>
        <div class="hero-actions">
          <a href="/software-development" class="btn">VIEW WORK →</a>
          <a href="mailto:kadewilliams0@gmail.com" class="btn btn--ghost">GET IN TOUCH</a>
        </div>
      </div>

      <div class="hero-stack">
        <div class="stack-label font-vt">CORE STACK//</div>
        <div class="stack-chips">
          {['.NET', 'C#', 'SQL Server', 'JavaScript', 'React', 'Node.js', 'PostgreSQL', 'Docker'].map(t => (
            <span class="chip chip--accent">{t}</span>
          ))}
        </div>
      </div>
    </section>

    <div class="section-divider">
      <span class="font-vt">◈ AREAS</span>
    </div>

    <section class="cards">
      <a href="/software-development" class="card">
        <div class="card-header">
          <span class="card-num font-vt">01</span>
          <span class="card-arrow">→</span>
        </div>
        <h2 class="card-title">SOFTWARE<br />DEVELOPMENT</h2>
        <p class="card-desc">
          Enterprise-scale internal tools, automation platforms, and data-driven
          applications built for real operational impact.
        </p>
        <div class="card-chips">
          {['.NET', 'C#', 'SQL Server', 'PowerShell', 'Jenkins'].map(t => (
            <span class="chip">{t}</span>
          ))}
        </div>
      </a>

      <a href="/personal-projects" class="card card--featured">
        <div class="card-header">
          <span class="card-num font-vt">02</span>
          <span class="card-tag font-vt">FEATURED</span>
          <span class="card-arrow">→</span>
        </div>
        <h2 class="card-title">PERSONAL<br />PROJECTS</h2>
        <p class="card-desc">
          Side projects exploring new stacks and solving real problems — from
          full-stack web apps to algorithm visualizers.
        </p>
        <div class="card-chips">
          {['React', 'TypeScript', 'Go', 'Docker', 'Postgres', 'Node.js'].map(t => (
            <span class="chip">{t}</span>
          ))}
        </div>
      </a>
    </section>

  </main>

  <footer class="footer">
    <div class="footer-inner">
      <span class="font-vt footer-name">KW © {new Date().getFullYear()}</span>
      <div class="footer-links">
        <a href="https://github.com/KadeWilliams" target="_blank" rel="noopener" class="footer-link">GITHUB ↗</a>
        <a href="mailto:kadewilliams0@gmail.com" class="footer-link">EMAIL ↗</a>
      </div>
    </div>
  </footer>
</Layout>

<style>
  .page-wrapper {
    max-width: 1100px;
    margin: 0 auto;
    padding: 4rem 2rem 3rem;
  }

  .hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto auto auto;
    gap: 2rem 4rem;
    padding-bottom: 4rem;
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 3rem;
  }

  .hero-eyebrow {
    grid-column: 1 / -1;
    display: flex;
    align-items: center;
    gap: 0.6rem;
    font-family: var(--font-vt);
    font-size: 1rem;
    letter-spacing: 0.15em;
    color: var(--green);
  }

  .status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--green);
    box-shadow: 0 0 8px var(--green);
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(5rem, 10vw, 9rem);
    line-height: 0.88;
    letter-spacing: -0.02em;
    color: var(--white);
  }

  .hero-title--outline {
    -webkit-text-stroke: 2px var(--white);
    color: transparent;
  }

  .hero-sub {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    justify-content: flex-end;
  }

  .hero-role {
    font-family: var(--font-vt);
    font-size: 1.1rem;
    letter-spacing: 0.1em;
    color: var(--blue);
  }

  .hero-desc { color: var(--dim); max-width: 480px; }

  .hero-actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    padding: 0.65rem 1.5rem;
    border: 2px solid var(--blue);
    color: var(--blue);
    box-shadow: var(--shadow-sm);
    transition: all 0.15s;
  }

  .btn:hover {
    background: var(--blue);
    color: var(--bg);
    transform: translate(-2px, -2px);
    box-shadow: 5px 5px 0 rgba(0,207,255,0.3);
  }

  .btn--ghost {
    border-color: var(--border-color);
    color: var(--dim);
    box-shadow: none;
  }

  .btn--ghost:hover {
    border-color: var(--white);
    color: var(--white);
    background: transparent;
    box-shadow: none;
    transform: none;
  }

  .hero-stack {
    grid-column: 1 / -1;
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .stack-label {
    font-family: var(--font-vt);
    font-size: 1rem;
    letter-spacing: 0.1em;
    color: var(--dim);
    flex-shrink: 0;
  }

  .stack-chips { display: flex; flex-wrap: wrap; gap: 0.4rem; }

  .section-divider {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .section-divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--border-color);
  }

  .section-divider span {
    font-family: var(--font-vt);
    font-size: 1rem;
    letter-spacing: 0.2em;
    color: var(--dim);
    flex-shrink: 0;
  }

  .cards {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem;
    border: 1px solid var(--border-color);
    background: var(--bg-2);
    transition: all 0.2s;
    position: relative;
    overflow: hidden;
  }

  .card::before {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0;
    height: 2px;
    background: transparent;
    transition: background 0.2s;
  }

  .card:hover {
    border-color: var(--blue);
    transform: translate(-3px, -3px);
    box-shadow: 3px 3px 0 var(--blue);
  }

  .card:hover::before { background: var(--blue); }

  .card--featured {
    border-color: rgba(0, 207, 255, 0.3);
  }

  .card--featured::before { background: var(--blue); }

  .card-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .card-num {
    font-family: var(--font-vt);
    font-size: 1.1rem;
    color: var(--dim);
    letter-spacing: 0.1em;
  }

  .card-tag {
    font-family: var(--font-vt);
    font-size: 0.85rem;
    background: var(--blue);
    color: var(--bg);
    padding: 0 8px;
    letter-spacing: 0.1em;
  }

  .card-arrow {
    margin-left: auto;
    color: var(--blue);
    font-size: 1.1rem;
    transition: transform 0.2s;
  }

  .card:hover .card-arrow { transform: translateX(4px); }

  .card-title {
    font-family: var(--font-display);
    font-size: 2rem;
    line-height: 0.95;
    color: var(--white);
  }

  .card-desc { color: var(--dim); flex: 1; }

  .card-chips { display: flex; flex-wrap: wrap; gap: 0.35rem; }

  .chip {
    font-family: var(--font-vt);
    font-size: 1rem;
    padding: 2px 10px;
    border: 1px solid var(--border-color);
    color: var(--dim);
  }

  .chip--accent {
    border-color: rgba(0, 207, 255, 0.4);
    color: var(--blue);
  }

  .footer { border-top: 1px solid var(--border-color); margin-top: 4rem; }

  .footer-inner {
    max-width: 1100px;
    margin: 0 auto;
    padding: 1.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-name {
    font-family: var(--font-vt);
    font-size: 1rem;
    letter-spacing: 0.15em;
    color: var(--dim);
  }

  .footer-links { display: flex; gap: 1.5rem; }

  .footer-link {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.12em;
    color: var(--dim);
    transition: color 0.15s;
  }

  .footer-link:hover { color: var(--blue); }

  .font-vt { font-family: var(--font-vt) !important; }

  .hero-eyebrow { animation: fadeUp 0.5s ease both; }
  .hero-title   { animation: fadeUp 0.5s 0.1s ease both; }
  .hero-sub     { animation: fadeUp 0.5s 0.2s ease both; }
  .hero-stack   { animation: fadeUp 0.5s 0.3s ease both; }
  .card:nth-child(1) { animation: fadeUp 0.5s 0.4s ease both; }
  .card:nth-child(2) { animation: fadeUp 0.5s 0.5s ease both; }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(16px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  @media (max-width: 768px) {
    .hero { grid-template-columns: 1fr; gap: 1.5rem; }
    .hero-title { font-size: clamp(4rem, 15vw, 7rem); }
    .cards { grid-template-columns: 1fr; }
  }
</style>
