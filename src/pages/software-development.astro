---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Project from '../components/Project.astro';

const tech = [".NET / C#", "JavaScript", "SQL Server", "PowerShell", "Jenkins"];

const projects = [
  {
    title: "DBA Management Portal",
    problem: "DBAs couldn't reliably monitor or control 140+ servers and 800+ TB of data.",
    solution: "A centralized, web-based internal management portal providing insights and control across the entire SQL Server ecosystem.",
    header: "Scale · Automation · Infrastructure",
    desc: [
      "Developed an automation engine leveraging PowerShell for reliable, cross-server communication and job execution.",
      "Delivered a centralized platform giving the team more granular control and better visibility than existing third-party tooling.",
      "Gained deep understanding of SQL Server architecture across Servers, Instances, Databases, and Availability Groups.",
    ],
  },
  {
    title: "Ministry Investment App",
    problem: "The executive team had no efficient way to track donations, partnerships, and contributions — leading to manual errors, lack of visibility, and slow processing.",
    solution: "A secure, reliable internal application centralizing all financial data for the executive office.",
    header: "Data Sensitivity · Security · Executive-Facing",
    desc: [
      "Full-stack application replacing a legacy process of manual spreadsheets for tracking sensitive financial partnerships.",
      "Provided the executive office with a single source of truth, automating reporting and ensuring data accuracy for critical decisions.",
      "End-to-end responsibility including robust user authentication, data validation, and secure access controls.",
    ],
  },
  {
    title: "International Import Price Index (IPI) Processing",
    problem: "The aging legacy system no longer fit the highly dynamic nature of processing imports, resulting in larger adjustments and corrections than necessary.",
    solution: "A new all-in-one platform covering the entire purchasing, verification, and classification process for increased accuracy and control.",
    header: "Modernize · Collaborate · Accuracy",
    desc: [
      "Participated in development across console, web, and API-based applications to run jobs and communicate with external systems.",
      "Gained high-level understanding of the full PO process — vendor correspondence and tariff classification research.",
    ],
  },
];
---

<Layout title="Software Development | Kade Williams">
  <Nav current="software-development" />

  <main class="page-wrapper">

    <div class="page-header">
      <a href="/" class="back-link">← BACK</a>
      <div class="page-eyebrow font-vt">// PROFESSIONAL WORK</div>
      <h1 class="page-title">SOFTWARE<br /><span class="outline">DEVELOPMENT</span></h1>
      <p class="page-desc">
        Enterprise-scale internal tooling, data platforms, and automation systems
        built to solve real operational problems.
      </p>
      <div class="tech-row">
        <span class="tech-label font-vt">CORE STACK//</span>
        <div class="tech-chips">
          {tech.map(t => <span class="chip chip--accent">{t}</span>)}
        </div>
      </div>
    </div>

    <section class="projects-section">
      <div class="section-label font-vt">◈ PROJECTS</div>
      <div class="projects-list">
        {projects.map((p, i) => (
          <div class="project-wrapper" style={`animation-delay: ${i * 100}ms`}>
            <Project
              title={p.title}
              problem={p.problem}
              solution={p.solution}
              header={p.header}
              desc={p.desc}
            />
          </div>
        ))}
      </div>
    </section>

  </main>

  <footer class="footer">
    <div class="footer-inner">
      <span class="font-vt footer-copy">KW © {new Date().getFullYear()}</span>
      <div class="footer-links">
        <a href="https://github.com/KadeWilliams" target="_blank" rel="noopener" class="footer-link">GITHUB ↗</a>
        <a href="mailto:kadewilliams0@gmail.com" class="footer-link">EMAIL ↗</a>
      </div>
    </div>
  </footer>
</Layout>

<style>
  .page-wrapper {
    max-width: 1100px;
    margin: 0 auto;
    padding: 4rem 2rem 3rem;
  }

  .font-vt { font-family: var(--font-vt) !important; }

  .page-header {
    margin-bottom: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--border-color);
    animation: fadeUp 0.5s ease both;
  }

  .back-link {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    color: var(--dim);
    margin-bottom: 1.5rem;
    padding: 0.35rem 0.75rem;
    border: 1px solid var(--border-color);
    transition: all 0.15s;
  }

  .back-link:hover { color: var(--blue); border-color: var(--blue); }

  .page-eyebrow {
    font-size: 1rem;
    letter-spacing: 0.2em;
    color: var(--blue);
    margin-bottom: 0.5rem;
  }

  .page-title {
    font-family: var(--font-display);
    font-size: clamp(3.5rem, 8vw, 7rem);
    line-height: 0.9;
    margin-bottom: 1.5rem;
    color: var(--white);
  }

  .outline {
    -webkit-text-stroke: 2px var(--white);
    color: transparent;
  }

  .page-desc { color: var(--dim); max-width: 520px; margin-bottom: 2rem; }

  .tech-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .tech-label {
    font-size: 0.9rem;
    letter-spacing: 0.15em;
    color: var(--dim);
    flex-shrink: 0;
  }

  .tech-chips { display: flex; flex-wrap: wrap; gap: 0.4rem; }

  .chip {
    font-family: var(--font-vt);
    font-size: 1rem;
    padding: 2px 10px;
    border: 1px solid var(--border-color);
    color: var(--dim);
    transition: all 0.15s;
  }

  .chip--accent {
    border-color: rgba(0, 207, 255, 0.4);
    color: var(--blue);
  }

  .section-label {
    font-size: 1rem;
    letter-spacing: 0.2em;
    color: var(--dim);
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .section-label::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--border-color);
  }

  .projects-list { display: flex; flex-direction: column; gap: 1.25rem; }

  .project-wrapper { animation: fadeUp 0.5s ease both; }

  .footer { border-top: 1px solid var(--border-color); margin-top: 4rem; }

  .footer-inner {
    max-width: 1100px;
    margin: 0 auto;
    padding: 1.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-copy {
    font-family: var(--font-vt);
    font-size: 1rem;
    letter-spacing: 0.15em;
    color: var(--dim);
  }

  .footer-links { display: flex; gap: 1.5rem; }

  .footer-link {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.12em;
    color: var(--dim);
    transition: color 0.15s;
  }

  .footer-link:hover { color: var(--blue); }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(16px); }
    to   { opacity: 1; transform: translateY(0); }
  }
</style>